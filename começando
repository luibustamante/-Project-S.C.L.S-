test_settings= {
        'brasil':'portugues'
}
def add_setting(settings, setting_par):
    key, value = setting_par
    key = key.lower()
    value = value.lower()

    if key in settings:
        return f"Setting '{key}' already exists! Cannot add a new setting with this name."
    
    if key not in settings:
        settings[key] = value
        return f"Setting '{key}' added with value '{value}' successfully!"
    
def update_setting(settings1,setting_par2):
    key,value =setting_par2
    key=key.lower()
    value=value.lower()
    if key in settings1:
        settings1[key]=value
        return f"Setting '{key}' updated to '{value}' successfully!"
    if key not in settings1:
        return f"Setting '{key}' does not exist! Cannot update a non-existing setting."
def delete_setting(settings2,setting_key):
    key=setting_key
    key=key.lower()
    if key in settings2:
        settings2.pop(key)
        return f"Setting '{key}' deleted successfully!"
    if key not in settings2:
        return "Setting not found!"
    def view_settings(settings3):
        result ='Current User Settings:'
        if not settings3:
            return 'No settings available.\n'
        for key,value in settings3.items():
            result+= f"{key.capitalize()}: {value}\n"
        return result
        

         
    

